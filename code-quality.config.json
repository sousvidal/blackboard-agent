{
  "thresholds": {
    "cyclomaticComplexity": {
      "error": 20,
      "warn": 12
    },
    "functionLines": {
      "error": 250,
      "warn": 150
    },
    "fileLines": {
      "error": 600,
      "warn": 400
    },
    "nestingDepth": {
      "error": 8,
      "warn": 6
    },
    "functionParameters": {
      "error": 5,
      "warn": 4
    }
  },
  "exclude": [
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/dist/**",
    "**/*.config.ts",
    "**/scripts/**"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
